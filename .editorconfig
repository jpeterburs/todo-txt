# EditorConfig is awesome: https://EditorConfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Go files
[*.go]
indent_style = tab
indent_size = 2
max_line_length = 120

# Makefile
[Makefile]
indent_style = tab

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 120

# YAML files
[*.yaml]
[*.yml]
indent_style = space
indent_size = 2
